# Variables de entorno para Docker
# Copia este archivo como .env y ajusta los valores según sea necesario

# Configuración de la base de datos
POSTGRES_DB=unifilar_db
POSTGRES_USER=unifilar_user
POSTGRES_PASSWORD=unifilar_password

# URL de conexión a la base de datos
DATABASE_URL=postgresql://unifilar_user:unifilar_password@postgres:5432/unifilar_db

# Configuración de la aplicación
NODE_ENV=production
PORT=5000

# Configuración de sesiones (genera una clave secreta aleatoria)
SESSION_SECRET=tu_clave_secreta_muy_segura_aqui

# Configuración adicional
LOG_LEVEL=info
