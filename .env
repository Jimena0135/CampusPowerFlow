# Variables de entorno para Docker
# Configuración de la base de datos principal (PostgreSQL para esquema)
POSTGRES_DB=unifilar_db
POSTGRES_USER=unifilar_user
POSTGRES_PASSWORD=unifilar_password

# URL de conexión a PostgreSQL (para esquema y metadatos)
DATABASE_URL=postgresql://unifilar_user:unifilar_password@unifilar-postgres:5432/unifilar_db

# Conexión a CrateDB para datos de series de tiempo
CRATE_HOST=crate-db
CRATE_PORT=5432
CRATE_URL=http://crate-db:4200

# Conexión a FIWARE Orion Context Broker
ORION_URL=http://orion-plataforma:1026
FIWARE_SERVICE=sec
FIWARE_SERVICEPATH=/

# Configuración de la aplicación
NODE_ENV=production
PORT=5000

# Configuración de sesiones
SESSION_SECRET=unifilar_secret_key_2024_sec

# Configuración adicional
LOG_LEVEL=info
